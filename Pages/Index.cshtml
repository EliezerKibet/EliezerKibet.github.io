<script>
    // Simple profile picture loading
    document.addEventListener('DOMContentLoaded', function() {
        const profilePicture = document.querySelector('.profile-picture');
        const container = document.querySelector('.profile-image-container');

        console.log('Profile picture found:', !!profilePicture);
        console.log('Container found:', !!container);

        if (profilePicture && container) {
            console.log('Profile picture src:', profilePicture.src);

            // Ensure image is visible
            profilePicture.style.opacity = '1';
            profilePicture.style.display = 'block';

            // Handle image load error
            profilePicture.addEventListener('error', function() {
                console.log('Image failed to load, showing fallback');
                container.classList.add('image-failed');
                this.style.display = 'none';
            });

            // Handle successful load
            profilePicture.addEventListener('load', function() {
                console.log('Image loaded successfully!');
            });

            // If image is already loaded
            if (profilePicture.complete && profilePicture.naturalHeight > 0) {
                console.log('Image was already loaded');
            }
        } else {
            console.error('Profile picture elements not found');
        }
    });
    </script>